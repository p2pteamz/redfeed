<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css"><!-- Link to bootstrap library-->
    <link rel="stylesheet" href="/assets/css/materialize.min.css"><!-- Link to materialize library-->  
    <link rel="shortcut icon" type="image/svg" href="/assets/img/site/logo.svg"/><!-- Link to title icon logo-->
    <title><%= title %></title>
</head>
<body>

    <% if (transactions.length > 0) {%>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr class="thead-dark">
                    <th scope="col" colspan="7" ><center>Transaction History</center></th>
                </tr>
                <tr>
                    <th scope="col">Transaction ID </th>
                    <th scope="col">Customer</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Currency</th>
                    <th scope="col">Country</th>
                    <th scope="col">Bitcoin Address</th>
                    <th scope="col">Created At</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach((transaction, index) => { %>
                    <tr>
                        <th scope="row"><%= transaction.Transaction_Id %></th>
                        <td><%= transaction.By %></td>
                        <td><%= transaction.Amount %></td>
                        <td><%= transaction.Currency %></td>
                        <td><%= transaction.Country %></td>
                        <td><%= transaction.Bitcoin_Address %></td>
                        <td><%= transaction.Created_At %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr class="thead-dark">
                <th scope="col" colspan="7" ><center>Transaction History</center></th>
                </tr>                
                <tr>
                <th scope="col">Transaction ID</th>
                <th scope="col">Customer</th>
                <th scope="col">Amount</th>
                <th scope="col">Currency</th>
                <th scope="col">Country</th>
                <th scope="col">Bitcoin Address</th>
                <th scope="col">Created At</th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td colspan="7">
                            <p class="text-center"> No transactions to display. </p>
                        </td>
                    </tr>
            </tbody>
        </table>        
    <% } %>

<table border="0" height="100%" width="100%" background-color="#fff">
<tr>
<td width="50%" align="left">

    <% if (page == "1") {%>  <% } else { %> <a href="/ui/?cur=<%= currency %>&cc=<%= country %>&lm=<%= limit %>&s=<%= topic %>&pg=<%= previous_page %>" rel="noopener" class="link btn-sm btn-success" style="text-decoration: none;"><font color="black"><strong> <- Previous Page </strong></font></a> <% } %>

</td> 
<td width="50%" align="right">

    <a href="/ui/?cur=<%= currency %>&cc=<%= country %>&lm=<%= limit %>&s=<%= topic %>&pg=<%= next_page %>" rel="noopener" class="link btn-sm btn-success" style="text-decoration: none;"><font color="black"><strong> Next Page -> </strong></font></a>

</td> 
</tr>
<tr>
<td colspan="2">
</br></br>
</td> 
</tr>
<tr>
<td colspan="2" align="center">
<p class="text-center text-muted">
<font size=2 color=#a5a1a0>Copyright &copy; <script type="text/javascript"> document.write(new Date().getFullYear()); </script>, Yellow Card Financial </font>
</p>
</td> 
</tr>
</table>
</body>
</html>

